{
  "name": "javascript-mastery",
  "version": "1.0.0",
  "description": "Complete JavaScript learning path with production-ready examples and projects",
  "type": "module",
  "main": "src/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "NODE_ENV=development nodemon src/index.js",
    "build": "NODE_ENV=production npm run type-check && npm run lint && npm run test",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint . --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore",
    "lint:fix": "ESLINT_USE_FLAT_CONFIG=false eslint . --ext .js,.jsx,.ts,.tsx --fix --ignore-path .gitignore",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,html,css}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,html,css}\" --ignore-path .gitignore",
    "test": "NODE_ENV=test jest --coverage --verbose",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:unit": "NODE_ENV=test jest --testPathPattern=\"__tests__/.*\\.test\\.js$\"",
    "test:e2e": "NODE_ENV=test jest --testPathPattern=\"__tests__/e2e/.*\\.test\\.js$\"",
    "type-check": "npx tsc --noEmit",
    "security": "npm audit --audit-level=moderate",
    "dependency:check": "npm outdated || true",
    "clean": "rm -rf node_modules coverage dist build .next .cache",
    "prepare": "husky install",
    "commit": "git-cz",
    "release": "standard-version",
    "docs": "jsdoc -c jsdoc.json",
    "coverage": "open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html || echo 'Open coverage/lcov-report/index.html in your browser'",
    "ci": "npm run type-check && npm run lint && npm run test"
  },
  "keywords": [
    "javascript",
    "learning",
    "education",
    "tutorial",
    "examples",
    "projects"
  ],
  "author": {
    "name": "jedancodeacademy-bit",
    "email": "support@jedancodeacademy.com",
    "url": "https://jedancodeacademy.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jedancodeacademy-bit/javascript-mastery.git"
  },
  "bugs": {
    "url": "https://github.com/jedancodeacademy-bit/javascript-mastery/issues"
  },
  "homepage": "https://github.com/jedancodeacademy-bit/javascript-mastery#readme",
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/jedancodeacademy-bit"
  },
  "files": [
    "src",
    "docs",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.0",
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0",
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.8.0",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "babel-jest": "^29.7.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsdoc": "^46.9.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.3",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "node": ">=18.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "volta": {
    "node": "18.17.0",
    "npm": "9.6.7"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/",
      "/coverage/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.{js,jsx,ts,tsx}",
      "**/?(*.)+(spec|test).{js,jsx,ts,tsx}"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "ESLINT_USE_FLAT_CONFIG=false eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,html,css}": [
      "prettier --write"
    ]
  }
}
